header.header
    .header__column
        span
            i.fab.fa-youtube
        span WETUBE
    .header__column
        include ./searchForm
    .header__column
        //- 로그인 됐을 때
        if user === null
            a(href=`${routes.upload}`)
                span
                    i.fas.fa-video
                    | UPLOAD
            a(href=`${routes.user}${routes.userDetail}`)
                span
                    i.fas.fa-user-check
                    | MY
            a(href=`${routes.logout}`)
                span
                    i.fas.fa-unlock
                    | LOGOUT
        //- 로그인 안됐을 때
        else
            a(href=`${routes.login}`)
                span
                    i.fas.fa-lock
                    | LOGIN
            a(href=`${routes.join}`)
                span
                    i.fas.fa-user-plus
                    | JOIN