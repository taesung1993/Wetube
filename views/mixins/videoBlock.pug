mixin videoBlock(video={})
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.homeVideo(src=`/${video.videoFile}`)
            .videoBlock__info
                .videoBlock__col
                    img(src=video.avatarUrl, width="50px", height="50px")                
                .videoBlock__col
                    .videoBlock__row=video.title
                    .videoBlock__row
                        span=video.creatorName
                        span view: #{video.view}