extends ./layouts/main.pug

block contents
    .userDetail-page
        .userDetail__header
            .userDetail__col
                img(src=`/${me.avatarUrl}`)
                span=me.name
            .userDetail__col
                if loggedUser !== null && loggedUser.id === me.id
                    a(href=routes.editProfile(me._id))
                        button
                            span EDIT PROFILE
                    a(href=routes.changePassword(me._id))
                        button
                            span CHANGE PASSWORD
        .userDetail__menu
            span Videos
        .video-list
            h4 Uploaded Videos
    